<%= simple_form_for qoute, html: { class: "qoute form" } do |f| %>
  <% if qoute.errors.any? %>
    <div class="error-message">
      <%= qoute.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= link_to "Cancel", qoutes_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>