<%= turbo_frame_tag qoute do %>
  <div class="qoute">
    <%= link_to qoute.name, qoute_path(qoute), data: { turbo_frame: "_top" } %>
    <div class="qoute__actions">
      <%= button_to "Delete",
                    qoute_path(qoute),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_qoute_path(qoute),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>  